<div class="row">
  <div class="col-sm-12">
      <h3 class="moduleTitle">Merge Plates</h3>
  </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="well">
            <div class="mergePlatesInstructions">Select the plate barcodes to go into each quadrant</div>
            <div class="row">
                <div class="form col-sm-6">
                    <div class="form-group has-feedback">
                        <label class="">A1 <span name="plateQuadrant1_barcodeNodeFound" class="plateNotFound hide">Plate not found</span></label>
                          <input type="text" class="form-control" name="plateQuadrant1" />
                          <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                          <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="">B1 <span name="plateQuadrant3_barcodeNodeFound" class="plateNotFound hide">Plate not found</span></label>
                          <input type="text" class="form-control" name="plateQuadrant3" />
                          <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                          <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                    </div>
                </div>

                <div class="form col-sm-6">
                  <div class="form-group has-feedback">
                      <label>A2 <span name="plateQuadrant2_barcodeNodeFound" class="plateNotFound hide">Plate not found</span></label>
                        <input type="text" class="form-control" name="plateQuadrant2" />
                        <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                  </div>
                  <div class="form-group has-feedback">
                      <label>B2 <span name="plateQuadrant4_barcodeNodeFound" class="plateNotFound hide">Plate not found</span></label>
                        <input type="text" class="form-control" name="plateQuadrant4"/>
                        <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                  </div>
                </div>
            </div>

            <div class="row">
                <div class="form col-sm-12">
                    <div class="form-group has-feedback">
                        <label class="control-label">Destination plate barcode &nbsp;<span class="hide" name="destinationPlateBarcodeAlreadyInUse" class="plateInUse">A plate has already been registered with that barcode.</span></label>
                        <input type="text" class="form-control" name='destinationPlateBarcode' />
                        <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <button class="btn btn-primary pull-right" name="mergePlate">Merge</button>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 hide" name="errorMessages">
      <div class="well errorWell">
        Error: Plates must all be the same size.
      </div>
    </div>
    <div class="col-sm-12 hide" name="sourcePlateTooBig">
      <div class="well errorWell">
        Error: cannot merge a plate larger than 384 wells.
      </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" name="mergePlateDialogBox">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="mergePlateTitle">Merging Plates</h5>
                <div name="mergedPlateLink" class="mergedPlateLink hide">
                    Plates successfully merged: <span name="mergedPlateName"></span><a class="btn btn-primary editMergePlateButton" name="linkToNewPlate" target="_blank">Edit</a>
                </div>
                <div class="hide" name="duplicateBarcodeErrorMessage">
                    <h5 class="bg-error">Error:</h5>
                    <p>The barcode <a name="barcode" style="font-weight: bold;" target="_blank"></a> has already been used.  Please go back and enter a different barcode.</p>
                </div>
            </div>
            <div class="modal-footer">
                <span name="dialogDismissButtons" class="hide">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" name="closeMergePlateDialog">Close</button>
                </span>
                <span name="mergingStatus">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                            <span class="sr-only">Cloning Plates</span>
                        </div>
                    </div>
                </span>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
