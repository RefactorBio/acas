<div class="row" style="padding-top: 56px;">
    <div class="col-sm-12">
        <h3 class="moduleTitle">Split Plates</h3>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="well well-small">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group has-feedback">
                        <label class="control-label">Source Plate Barcode</label>
                        <input type="text" class="form-control" name='sourcePlateBarcode' />
                        <span class="hide" name="sourcePlateNotFound">Plate not found</span>
                        <span class="hide" name="sourcePlateTooSmall">Plate size is to small to split.</span>
                        <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group has-feedback">
                        <label class="control-label">
                            Q1: <span name="plateQuadrant1_barcodeFound" class="hide">
                            A plate with that barcode has already been registered: <a name="plateQuadrant1_existingPlateLink" target="_blank"></a>
                        </span></label>
                        <input type="text" class="form-control" name="plateQuadrant1" />
                        <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group has-feedback">
                        <label class="control-label">
                            Q2: <span name="plateQuadrant2_barcodeFound" class="hide">
                            A plate with that barcode has already been registered: <a name="plateQuadrant2_existingPlateLink" target="_blank"></a>
                        </span></label>
                        <input type="text" class="form-control" name="plateQuadrant2" />
                        <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group has-feedback">
                        <label class="control-label">
                            Q3: <span name="plateQuadrant3_barcodeFound" class="hide">
                            A plate with that barcode has already been registered: <a name="plateQuadrant3_existingPlateLink" target="_blank"></a>
                        </span></label>
                        <input type="text" class="form-control" name="plateQuadrant3" />
                        <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group has-feedback">
                        <label class="control-label">
                            Q4: <span name="plateQuadrant4_barcodeFound" class="hide">
                            A plate with that barcode has already been registered: <a name="plateQuadrant4_existingPlateLink" target="_blank"></a>
                        </span></label>
                        <input type="text" class="form-control" name="plateQuadrant4"/>
                        <span class="glyphicon glyphicon-ok form-control-feedback hide" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-warning-sign form-control-feedback hide" aria-hidden="true"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12" style="margin-top: 1em;">
                    <span name="duplicateBarcodeErrorMessage" class="hide">
                        Destination Plate Barcodes must be unique
                    </span>
                    <button class="btn btn-primary pull-right" name="splitPlate">Split</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" name="splitPlateDialogBox">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Spliting Plate</h4>
                <div name="splitPlateLinks" class="hide">
                    Plate successfully split:
                    <ul>
                        <li style="padding-top: 0.5em;">
                            Q1: <span name="barcodeQuad1Plate"></span>&nbsp;&nbsp;<a class="btn btn-primary btn-xs" name="linkToQuad1Plate">edit</a>
                        </li><li style="padding-top: 0.5em;">
                            Q2: <span name="barcodeQuad2Plate"></span>&nbsp;&nbsp;<a class="btn btn-primary btn-xs" name="linkToQuad2Plate">edit</a>
                        </li><li style="padding-top: 0.5em;">
                            Q3: <span name="barcodeQuad3Plate"></span>&nbsp;&nbsp;<a class="btn btn-primary btn-xs" name="linkToQuad3Plate">edit</a>
                        </li><li style="padding-top: 0.5em;">
                            Q4: <span name="barcodeQuad4Plate"></span>&nbsp;&nbsp;<a class="btn btn-primary btn-xs" name="linkToQuad4Plate">edit</a>
                        </li>
                    </ul>

                </div>
                <div class="hide" name="existingBarcodeErrorMessage">
                    <h4><p class="bg-error">Error:</p></h4>
                    <ul name="duplicateBarcodes"></ul>
                    <!--<p>The barcode <a name="barcode" style="font-weight: bold;" target="_blank"></a> has already been used.  Please go back and enter a different barcode.</p>-->
                </div>
            </div>
            <div class="modal-footer">
                <span name="dialogDismissButtons" class="hide">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" name="closeMergePlateDialog">Close</button>
                </span>
                <span name="splitingStatus">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                            <span class="sr-only">Cloning Plates</span>
                        </div>
                    </div>
                </span>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
